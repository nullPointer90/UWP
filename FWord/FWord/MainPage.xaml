<Page
    x:Class="FWord.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FWord"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="using:FWord.View" 
    xmlns:VM="using:FWord.ViewModel"
    xmlns:UI="using:Microsoft.Advertising.WinRT.UI"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:media="using:Microsoft.Xaml.Interactions.Media"
    mc:Ignorable="d"
    >
    <Page.DataContext>
        <VM:MainPageVM />
    </Page.DataContext>
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///View/CustomButton.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Storyboard x:Key="animationStatus">
                <DoubleAnimation Storyboard.TargetName="imgStatus" Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="0:0:1.5"/>
            </Storyboard>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="#966F33">
        <Grid HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              Canvas.ZIndex="10"
              Background="Black"
              Opacity="0.6"
              Visibility="{Binding BkgndControl.Visible}"
              >
            <StackPanel Orientation="Vertical"
                        VerticalAlignment="Center">
                <TextBlock
                Text="{Binding BkgndControl.Text}"
                FontSize="45"
                FontWeight="Bold"
                Foreground="#FAFAFA"
                HorizontalAlignment="Center"
                />
                <TextBlock
                    x:Name="txtLevel"
                    Text="{Binding Player.Level}"
                FontSize="45"
                FontWeight="Bold"
                Foreground="LightBlue"
                HorizontalAlignment="Center"
                    Visibility="{Binding BkgndControl.Visible}"
                    />
                <Button
                    x:Name="btnReplay"
                HorizontalAlignment="Center"
                Canvas.ZIndex="10"
            Width="64"
            Height="64"
            Style="{StaticResource CustomButton}"
            Visibility="Collapsed"
            view:PropertyCustomButton.NormalImage="ms-appx:///Assets/PlayAgain.png"    
                Command="{Binding BtnPlayClick}"
            />
            </StackPanel>
        </Grid>
        <Grid
            x:Name="gridStartGame"
            HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              Canvas.ZIndex="10"
              Background="#663300"
              Opacity="1" 
            >
            <StackPanel>
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft"
                                Margin="0 0 50 0">
                        <Image
                        Source="ms-appx:///Assets/StoreLogo.png"
                        Width="50"
                        Height="50"
                            Margin="0 20 0 0"
                        />
                        <TextBlock
                FontWeight="Bold"
                Text="Crossword"
                Foreground="LightBlue"
                FontSize="80"
                />
                    </StackPanel>

                    <TextBlock
                FontWeight="Bold"
                Text="Mysterious"
                Foreground="LightBlue"
                FontSize="80"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0 0 50 0"
                />

                    <TextBlock 
                Foreground="LightBlue"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                FontSize="20"
                Text="Version : 1.0"
                        Margin="0 0 100 0"
                />
                    <TextBlock 
                Foreground="LightBlue"
                HorizontalAlignment="Right"
                FontSize="20"
                Text="By nullPointer"
                        Margin="0 0 100 0"
                />
                </StackPanel>
                <StackPanel Orientation="Vertical"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                    <TextBlock 
                    x:Name="txt1"
                Foreground="#FAFAFA"
                HorizontalAlignment="Center"
                FontSize="20"
                Text="Welcome to mini game Crossword Mysterious!"
                    Opacity="0"
                >
                        <TextBlock.Triggers>
                            <EventTrigger>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" Storyboard.TargetName="txt1" From="0" To="1" Duration="0:0:1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>
                    <TextBlock
                    x:Name="txt2"
                     Foreground="#FAFAFA"
                HorizontalAlignment="Center"
                FontSize="20"
                    Text="Trying to find the fastest possible"
                     Opacity="0"
                    >
                        <TextBlock.Triggers>
                            <EventTrigger>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" Storyboard.TargetName="txt2" From="0" To="1" Duration="0:0:1" BeginTime="0:0:1"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>
                    <TextBlock
                    x:Name="txt3"
                     Foreground="#FAFAFA"
                HorizontalAlignment="Center"
                FontSize="20"
                    Text="Every time you have 10s for think and choose (You can only choose the wrong 5 times)"
                     Opacity="0"
                    >
                        <TextBlock.Triggers>
                            <EventTrigger>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" Storyboard.TargetName="txt3" From="0" To="1" Duration="0:0:1" BeginTime="0:0:2"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>
                    <TextBlock
                    x:Name="txt4"
                     Foreground="#FAFAFA"
                HorizontalAlignment="Center"
                FontSize="20"
                    Text="Are you ready ? Click button or Enter to start"
                     Opacity="0"
                    >
                        <TextBlock.Triggers>
                            <EventTrigger>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" Storyboard.TargetName="txt4" From="0" To="1" Duration="0:0:1" BeginTime="0:0:3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>
                    <Button
                x:Name="btnStart"
                HorizontalAlignment="Center"
                Canvas.ZIndex="10"
                Width="128"
                Height="128"
                Style="{StaticResource CustomButton}"
                view:PropertyCustomButton.NormalImage="ms-appx:///Assets/start.png"  
                Click="Button_Click"
                     Opacity="0"
                    Margin="0 20 0 0"
            >
                        <Button.Triggers>
                            <EventTrigger>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" Storyboard.TargetName="btnStart" From="0" To="1" Duration="0:0:1" BeginTime="0:0:4"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Button.Triggers>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="95" />
                <RowDefinition Height="80" />
                <RowDefinition Height="80" />
                <RowDefinition Height="*" />
                <RowDefinition Height="150" />
            </Grid.RowDefinitions>
            <UI:AdControl
                x:Name="adControl"
               Grid.Row="0"
               ApplicationId="0af823c3-8ac1-4722-9279-3306242fd09a"
               AdUnitId="336179"
               HorizontalAlignment="Center"
               Height="90"
               VerticalAlignment="Top"
               Width="728"/>
            <Grid
                Grid.Row="1"
                Height="Auto"
                    >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel
                    Grid.Column="0"
                    Orientation="Horizontal"
                    Margin="50 0 0 0"
                    >
                    <Image
                        Width="64"
                        Height="64"
                        Margin="0 10 0 10"
                        Source="ms-appx:///Assets/time.png"
                        Opacity="0.7"
                        />

                    <Image
                	Width="64"
                	Height="64"
                	Margin="10 10 0 10"
                	Source="{Binding TimerMng.PathImageNumber}"
                    RenderTransformOrigin="0.5,0.5"
                	UseLayoutRounding="False" d:LayoutRounding="Auto"
                        >
                        <Image.RenderTransform>
                            <CompositeTransform Rotation="29.24"/>
                        </Image.RenderTransform>
                    </Image>
                </StackPanel>
                <StackPanel
                    Grid.Column="1"
                    Orientation="Horizontal" 
                    FlowDirection="RightToLeft"  
                    Margin="0 0 60 0">
                    <TextBlock
                        Text="{Binding Player.Level}"
                        Foreground="LightBlue"
                        FontWeight="Bold"
                        FontSize="60"
                        HorizontalAlignment="Right"
                        />
                    <TextBlock 
                        Width="20"/>
                    <TextBlock
                        Text="L  :"
                        HorizontalAlignment="Right"
                        Foreground="LightBlue"
                        FontWeight="Bold"
                        FontSize="60"
                        />
                </StackPanel>
            </Grid>
            <Grid
                Grid.Row="2">
                <Image
                    x:Name="imgStatus"
                    Width="48"
                    Height="48"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Margin="50 0 0 0"
                    Source="{Binding Player.PathImageStatus}"
                    Opacity="{Binding Player.OpacityStatus}"
                    >
                    <Interactivity:Interaction.Behaviors>
                        <core:DataTriggerBehavior Binding="{Binding Path=Opacity,ElementName=imgStatus}" Value="1" ComparisonCondition="Equal">
                            <media:ControlStoryboardAction Storyboard="{StaticResource animationStatus}"/>
                        </core:DataTriggerBehavior>
                    </Interactivity:Interaction.Behaviors>
                </Image>
                <StackPanel 
                    Orientation="Horizontal" 
                        HorizontalAlignment="Right"
                        FlowDirection="RightToLeft" 
                        Margin="0 10 50 10"
                        >
                    <ListView
                    HorizontalAlignment="Right"                   
                    ItemsSource="{Binding Player.ListPathImageTimes}"
                    IsEnabled="False"
                    >
                        <ListView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ListView.ItemsPanel>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Image
                                    Width="64"
                                    Height="64"
                                    Source="{Binding}"
                                    />
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
                <Line X1="0" Y1="0" X2="1" Y2="0" Stretch="Fill" Stroke="LightBlue" VerticalAlignment="Bottom" Opacity="0.6" IsTapEnabled="False"/>
            </Grid>
            <Grid Grid.Row="3">
            <GridView
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            ItemsSource="{Binding Player.ListCharacterFind}"  
            IsHitTestVisible="False"
            IsEnabled="False"
            >
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <Border
                        BorderThickness="0 0 0 3"
                        BorderBrush="LightBlue"                       
                        >
                            <TextBlock                                   
                            Text="{Binding Val}"  
                            FontSize="40"
                            FontWeight="Bold"
                            Foreground="{Binding CharOpacity.Color}"
                            Opacity="{Binding CharOpacity.Opacity}"
                            />
                        </Border>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
            </Grid>
            <Grid Grid.Row="4">
            <StackPanel Orientation="Vertical" VerticalAlignment="Bottom" Height="148">
                <StackPanel Orientation="Horizontal" 
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Center"
                        Margin="10 0 10 0">
                    <Button 
                    x:Name="btnA"
                    Width="64"
                    Opacity="{Binding Player.ListOpacityCharacters[0].Opacity}"
                    Style="{StaticResource CustomButton}"
                    view:PropertyCustomButton.NormalImage="ms-appx:///Assets/Image/1.jpg"
                    Command="{Binding BtnLetterClick}"
                    CommandParameter="A"
                    Margin="1 1 1 1"
                    />
