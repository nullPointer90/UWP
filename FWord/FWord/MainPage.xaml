                    Command="{Binding BtnLetterClick}"
                    CommandParameter="M"
                    Margin="{Binding Margin,ElementName=btnA}"
                    />
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                        Margin="10 0 10 10"
                        HorizontalAlignment="Center">

